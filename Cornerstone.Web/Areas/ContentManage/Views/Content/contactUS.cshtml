@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    layui.use(['jquery', 'form', 'laydate','xmSelect', 'optimizeSelectOption', 'common'], function () {
        var form = layui.form,
            $ = layui.$,
            common = layui.common,
            laydate = layui.laydate,
            upload = layui.upload,
            xmSelect = layui.xmSelect;

        var keyValue = $.request("keyValue");
        var itemId = $.request("itemId");
        //权限字段
        common.authorizeFields('adminform');

        laydate.render({
            elem: '#F_MeetingStartTime',
            format: 'yyyy/MM/dd HH:mm:ss',
            type:'datetime',
        });
        laydate.render({
            elem: '#F_MeetingEndTime',
            format: 'yyyy/MM/dd HH:mm:ss',
            type: 'datetime',
        });
        laydate.render({
            elem: '#F_PublishTime',
            format: 'yyyy/MM/dd HH:mm:ss',
            type: 'datetime',
        });
         var channelSelect= xmSelect.render({
              el: '#channelSelect',
            autoRow: true,
            filterable: true,
            direction: 'down',
            tree: {
                show: true,
                showFolderIcon: true,
                showLine: true,
                indent: 20,
                strict: false,
                clickExpand: true,
                clickCheck: true,
                expandedKeys: true
            },
            toolbar: {
                show: true,
                list: ['ALL', 'REVERSE', 'CLEAR']
            },
            filterable: true,
            height: 'auto',
            data: function () {
                return  @Html.Raw(ViewBag.channel)
            }
        });
        var tagSelect= xmSelect.render({
            el: '#tagSelect',
            autoRow: true,
            filterable: true,
            direction: 'down',
            tree: {
                show: true,
                showFolderIcon: true,
                showLine: true,
                indent: 20,
                strict: false,
                clickExpand: true,
                clickCheck: true,
                expandedKeys: true
            },
            toolbar: {
                show: true,
                list: ['ALL', 'REVERSE', 'CLEAR']
            },
            filterable: true,
            height: 'auto',
            data: function () {
                return  @Html.Raw(ViewBag.lable)
            }
        });
        @*var authorSelect =xmSelect.render({
            el: '#authorSelect',
            autoRow: true,
            filterable: true,
            toolbar: {
                show: true,
                list: ['ALL', 'REVERSE', 'CLEAR']
            },
            data: @Html.Raw(ViewBag.expert),
        });*@
        var event = $.request("event");
        wcLoading.close();
        //此处需修改
        //类型为时间时
        //laydate.render({
            //elem: '#F_Birthday'
            //, btns: ['clear', 'now']
            //, trigger: 'click',
            //format: 'yyyy-MM-dd',
        //});
        $(function () {
            initControl();

            if (event == "edit") {
                var content = '@Html.Raw(ViewBag.Content)'.replace(/\n/g, "").replace(/\t/g, "");
                console.log(content);
                var newsdata = JSON.parse(content);
                common.val('adminform', newsdata);
                var Description2 = newsdata.F_LiveIntroduction;

                if (!!newsdata.ImgUrl) {
                    ImgUrlPic.src = newsdata.ImgUrl;
                }

                if (Description2 != null) {
                    var editor2 = UE.getEditor("F_LiveIntroduction");
                    editor2.ready(function () {
                        editor2.setContent(Description2);
                    });
                }

                if (newsdata.F_Content != null) {
                    var F_Content = UE.getEditor("F_Content");
                    F_Content.ready(function () {
                        F_Content.setContent(newsdata.F_Content);
                    });
                }



                if (newsdata.F_LiveBroadcast != null) {
                    var F_LiveBroadcast = UE.getEditor("F_LiveBroadcast");
                    F_LiveBroadcast.ready(function () {
                        F_LiveBroadcast.setContent(newsdata.F_LiveBroadcast);
                    });
                }
                if (newsdata.F_WonderfulContent != null) {
                    var F_WonderfulContent = UE.getEditor("F_WonderfulContent");
                    F_WonderfulContent.ready(function () {
                        F_WonderfulContent.setContent(newsdata.F_WonderfulContent);
                    });
                }
                if (newsdata.F_Summary != null) {
                    var F_Summary = UE.getEditor("F_Summary");
                    F_Summary.ready(function () {
                        F_Summary.setContent(newsdata.F_Summary);
                    });
                }

            }

           form.render();
       });

        function initControl() {

            $("#F_ChannelId").bindSelect({
                url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/GetTreeSelectJson"
            });
            $("#F_ChannelId").val('@(ViewBag.ChannelId)');



        }
        //select验证
        form.verify({
            required: function (value, item) {
                var msg = "必填项不能为空";
                value = $.trim(value);
                var isEmpty = !value || value.length < 1;
                // 当前验证元素是select且为空时,将页面定位至layui渲染的select处，或自定义想定位的位置
                if (item.tagName == 'SELECT' && isEmpty) {
                    $("html").animate({
                        scrollTop: $(item).siblings(".layui-form-select").offset().top - 74
                    }, 50);
                }
                if (isEmpty) {
                    return msg;
                }
            }
        });
       //监听提交
        form.on('submit(saveBtn)', function (data) {
            // 单击之后提交按钮不可选,防止重复提交
            $('.site-demo-active').addClass('layui-btn-disabled');
            $('.site-demo-active').attr('disabled', 'disabled');
            var postData = data.field;
            if (!postData["F_LiveIntroduction"]) postData["F_LiveIntroduction"] = UE.getEditor('F_LiveIntroduction').getContent();
            if (!postData["F_Content"]) postData["F_Content"] = UE.getEditor('F_Content').getContent();
            if (!postData["F_Summary"]) postData["F_Summary"] = UE.getEditor('F_Summary').getContent();
            if (!postData["F_WonderfulContent"]) postData["F_WonderfulContent"] = UE.getEditor('F_WonderfulContent').getContent();
            if (!postData["F_LiveBroadcast"]) postData["F_LiveBroadcast"] = UE.getEditor('F_LiveBroadcast').getContent();

            if (!postData["F_EnabledMark"]) postData["F_EnabledMark"] = false;
            if (!postData["F_IsRecommend"]) postData["F_IsRecommend"] = false;
            if (!postData["F_IsAuthorization"]) postData["F_IsAuthorization"] = false;
            if (!postData["F_IsLive"]) postData["F_IsLive"] = false;
            if (!postData["F_IsTop"]) postData["F_IsTop"] = false;
            if (!postData["F_Status"]) postData["F_Status"] = false;
            postData["F_ItemId"] = itemId;


            common.submitForm({
                url: event == "edit" ? "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Content/SubmitForm?keyValue=" + keyValue : "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Content/SubmitForm",
                param: postData,
                close: false,
                success: function (result) {
                    //common.reloadIframe("@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Content/Index", 'data-search-btn');
                    var currentUrl = window.location.href;
                    var iframes = top.$(".layui-show>iframe");
                    if (currentUrl.indexOf("event=edit") >= 0) {
                        common.reloadIframe("@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Content/Index", 'data-search-btn');
                        iframes[0].src = currentUrl;
                    }
                    else {
                        iframes[0].src = currentUrl.substring(0, currentUrl.indexOf("?")) + "?event=edit&keyValue=" + result.keyValue;
                    }
                }
            })
            return false;
        });


         $("#NF-lan-en").on("click", function () {
            var iframes = top.$(".layui-show>iframe");
            $.get({
                data: { "lan": "1" },
                url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/SetLan',
                success: function (data) {
                    iframes[0].src = window.location.href;
                }
            })

        });

        $("#NF-lan-cn").on("click", function () {
            var iframes = top.$(".layui-show>iframe");
            $.get({
                data: { "lan": "0" },
                url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/SetLan',
                success: function (data) {
                    iframes[0].src = window.location.href;
                }
            })

        });

   });
</script>

<body>
    <center>
        <div style=" margin: 10px;" class="showlan">

            <button id="NF-lan-cn" authorize="yes" class="layui-btn layui-btn-sm layui-btn-warm  " style="height:30px; padding:0 25px;" lay-submit lay-filter="lan-cn"> <i class="fa fa-flag"></i>中文版</button>
            <button id="NF-lan-en" authorize="yes" class="layui-btn layui-btn-sm  " lay-submit style="height:30px; padding:0 25px;" lay-filter="lan-en"> <i class="fa fa-flag-checkered"></i>英文版</button>
        </div>

    </center>
    <div class="layuimini-container">
        <div class="layuimini-main" style="margin-bottom: 80px;">
            <div class="layui-form layuimini-form" lay-filter="adminform">
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">栏目</label>
                    <div class="layui-input-block">
                        <input type="hidden" id="F_LanInfoId" name="F_LanInfoId" value="">
                        <select id="F_ChannelId" name="F_ChannelId" lay-filter="F_ChannelId" lay-search>
                            <option value="">请选择栏目</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">标题</label>
                    <div class="layui-input-block">
                        <input type="hidden" id="F_HitCount" name="F_HitCount" value="0">
                        <input type="hidden" id="F_LikeCount" name="F_LikeCount" value="0">
                        <input type="hidden" id="F_CommentCount" name="F_CommentCount" value="0">
                        <input type="hidden" id="F_SubscriptionCount" name="F_SubscriptionCount" value="0">
                        <input type="hidden" id="F_FavoritesCount" name="F_FavoritesCount" value="0">
                        <input type="hidden" id="F_HitBackToCount" name="F_HitBackToCount" value="0">
                        <input type="text" id="F_Titile" name="F_Titile" autocomplete="off" maxlength="200" lay-verify="required" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">联系方式</label>
                    <div class="layui-input-block">
                        <textarea id="F_Content" name="F_Content" type="text/plain" style="width:100%;height:400px;"></textarea>
                    </div>
                </div>

                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label required">第2部分</label>
                    <div class="layui-input-block">
                        <textarea id="F_LiveBroadcast" name="F_LiveBroadcast" type="text/plain" style="width:100%;height:400px;"></textarea>
                    </div>
                </div>

                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label required">第3部分</label>
                    <div class="layui-input-block">
                        <textarea id="F_LiveIntroduction" name="F_LiveIntroduction" type="text/plain" style="width:100%;height:400px;"></textarea>
                    </div>
                </div>

                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label required">第4部分</label>
                    <div class="layui-input-block">
                        <textarea id="F_WonderfulContent" name="F_WonderfulContent" type="text/plain" style="width:100%;height:400px;"></textarea>
                    </div>
                </div>

                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label required">第5部分</label>
                    <div class="layui-input-block">
                        <textarea id="F_Summary" name="F_Summary" type="text/plain" style="width:100%;height:400px;"></textarea>
                    </div>
                </div>

                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">排序</label>
                    <div class="layui-input-block">
                        <input type="number" pattern="[0-9]*" id="F_Order" name="F_Order" lay-verify="required" class="layui-input" value="0">
                    </div>
                </div>
                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label">选项</label>
                    <div class="layui-input-block">
                        <input type="checkbox" name="F_EnabledMark" id="F_EnabledMark" checked="" value="true" title="有效">
                        <input id="F_IsTop" name="F_IsTop" type="checkbox" value="true" title="是否置顶">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">发布时间</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_PublishTime" name="F_PublishTime" autocomplete="off" maxlength="200" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label">审核状态</label>
                    <div class="layui-input-block">
                        <input type="checkbox" name="F_Status" id="F_Status" checked="" value="true" title="审核通过">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">Seo标题</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_SeoTitle" name="F_SeoTitle" autocomplete="off" class="layui-input" placeholder="不填写则默认为网站标题">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">Seo关键字</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_SeoKeywords" name="F_SeoKeywords" autocomplete="off" class="layui-input" placeholder="不填写则默认为网站摘要">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">Seo描述</label>
                    <div class="layui-input-block">
                        <textarea id="F_SeoDescription" name="F_SeoDescription" autocomplete="off" class="layui-textarea" placeholder="不填写则自动截取内容前255字符"></textarea>
                    </div>
                </div>

                <div class="form-group-bottom text-right">
                    <div class="layui-input-block">
                        <button class="layui-btn site-demo-active" lay-submit lay-filter="saveBtn">
                            &emsp;保存&emsp;
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link href="~/lib/ueditor/themes/default/css/ueditor.css?v=1.3" rel="stylesheet" />
    <script type="text/javascript" charset="utf-8" src="~/lib/ueditor/ueditor.config.js?v=1.5"></script>
    <script type="text/javascript" charset="utf-8" src="~/lib/ueditor/ueditor.all.js?v=1.5"></script>
    <!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
    <!--这里加载的语言文件会覆盖你在配置项目里添加的语言类型，比如你在配置项目里配置的是英文，这里加载的中文，那最后就是中文-->
    <script type="text/javascript" charset="utf-8" src="~/lib/ueditor/lang/zh-cn/zh-cn.js"></script>

    <script type="text/javascript">
        // 加载 ueditor，传入的初始化参数可以覆盖掉 ueditor.config.js 中的配置
        // 对于同一项目中使用不同的配置的 ueditor 场景非常有用
        var ue1 = UE.getEditor('F_LiveIntroduction', {
            initialFrameHeight: 250,
            autoFloatEnabled: false, //取消悬浮
            // , initialFrameWidth:796
            zIndex: 0,
            wordCount: false
        });

        var F_Content = UE.getEditor('F_Content', {
            initialFrameHeight: 250,
            autoFloatEnabled: false, //取消悬浮
            // , initialFrameWidth:796
            zIndex: 0,
            wordCount: false
        });



        var F_Summary = UE.getEditor('F_Summary', {
            initialFrameHeight: 250,
            autoFloatEnabled: false, //取消悬浮
            // , initialFrameWidth:796
            zIndex: 0,
            wordCount: false
        });

        var F_WonderfulContent = UE.getEditor('F_WonderfulContent', {
            initialFrameHeight: 250,
            autoFloatEnabled: false, //取消悬浮
            // , initialFrameWidth:796
            zIndex: 0,
            wordCount: false
        });

        var F_LiveBroadcast = UE.getEditor('F_LiveBroadcast', {
            initialFrameHeight: 250,
            autoFloatEnabled: false, //取消悬浮
            // , initialFrameWidth:796
            zIndex: 0,
            wordCount: false
        });

    </script>



            //elem: '#F_Birthday'
            //, btns: ['clear', 'now']
            //, trigger: 'click',
            //format: 'yyyy-MM-dd',
        //});

        $(function () {
            initControl();

            if (event == "edit") {
                var newsdata = JSON.parse('@Html.Raw(ViewBag.Content)');
                common.val('adminform', newsdata);
                    var Content = newsdata.F_Content;

                    if (Content != null) {
                    var editor = UE.getEditor("F_Content");
                        editor.ready(function () {
                            editor.setContent(Content);
                });
                }

            }
            if ($("#F_ImageUrl").val() != "") {
                var imageHtml = '';
                var result = $("#F_ImageUrl").val().split(',');
                for (var i in result) {
                    imageHtml += '<li style="float: left;"><img src="' + result[i] + '"  height="150" onclick="previewImg(this)"></li>';
                }
                document.getElementById('upload_img_wrap').innerHTML = imageHtml;
            }
            if ($("#F_PicUrl").val() != "") {
                var imageHtml = '';
                var result = $("#F_PicUrl").val().split(',');
                for (var i in result) {
                    imageHtml += '<li style="float: left;"><img src="' + result[i] + '"  height="150" onclick="previewImg(this)"></li>';
                }
                document.getElementById('upload_img_wrapPic').innerHTML = imageHtml;
            }
            if ($("#F_ButtonPic1").val() != "") {
                var imageHtml = '';
                var result = $("#F_ButtonPic1").val().split(',');
                for (var i in result) {
                    imageHtml += '<li style="float: left;"><img src="' + result[i] + '"  height="150" onclick="previewImg(this)"></li>';
                }
                document.getElementById('upload_img_wrapButtonPic1').innerHTML = imageHtml;
            }
            if ($("#F_ButtonPic2").val() != "") {
                var imageHtml = '';
                var result = $("#F_ButtonPic2").val().split(',');
                for (var i in result) {
                    imageHtml += '<li style="float: left;"><img src="' + result[i] + '"  height="150" onclick="previewImg(this)"></li>';
                }
                document.getElementById('upload_img_wrapButtonPic2').innerHTML = imageHtml;
            }
            form.render();
           
       });
       wcLoading.close();

        function initControl() {
             $("#F_ParentId").bindSelect({
                 url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/GetTreeSelectJson",
            });
            $("#F_Type").bindSelect({
                url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/GetBlockType",
            });
           $("#F_ShowType").bindSelect({
               url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/GetShowType",
           });
            $("#F_ChannelId").bindSelect({
               url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/GetTreeSelectJson"
           });
        }
      
       //监听提交
        form.on('submit(saveBtn)', function (data) {
          
           // 单击之后提交按钮不可选,防止重复提交
           $('.site-demo-active').addClass('layui-btn-disabled');
           $('.site-demo-active').attr('disabled', 'disabled');
           var postData = data.field;
           if (!postData["F_Content"]) postData["F_Content"] = UE.getEditor('F_Content').getContent();
           if (!postData["F_EnabledMark"]) postData["F_EnabledMark"] = false;
           common.submitForm({
               url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/SubmitForm?keyValue=' + keyValue,
               param: postData,
               close: false,
               success: function (result) {
                   
                   var currentUrl = window.location.href;
                   var iframes = top.$(".layui-show>iframe");
                   if (currentUrl.indexOf("event=edit") >= 0) {
                       common.reloadIframe("@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/Index", 'data-search-btn');
                       //common.reloadIframe(currentUrl);
                       //window.location.reload();
                       
                       iframes[0].src = currentUrl;
                   }
                   else {
                       iframes[0].src = currentUrl + "?event=edit&keyValue=" + result.keyValue;
                      // common.reloadIframe(currentUrl + "?event=edit&keyValue=" + result.keyValue);
                      // window.location.href = currentUrl + "?event=edit&keyValue=" + result.keyValue;
                   }
                  // common.reloadIframe("@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/Index", 'data-search-btn');

               }
           })
           return false;
       });

        $("#NF-lan-en").on("click", function () {
            var iframes = top.$(".layui-show>iframe");
            $.get({
                data: {"lan":"1"},
                url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/SetLan',
                success: function (data) {

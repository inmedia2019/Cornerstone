<script>
    $(function () {
        // 监听多图上传和上传附件组件的插入动作
        uploadEditor.ready(function () {
            uploadEditor.addListener("beforeInsertImage", _beforeInsertImage);
        });
        // 自定义按钮绑定触发多图上传和上传附件对话框事件
        document.getElementById('j_upload_img_btn').onclick = function () {
            var dialog = uploadEditor.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };

        uploadEditorPic.ready(function () {
            uploadEditorPic.addListener("beforeInsertImage", _beforeInsertImagePic);
        });
        // 自定义按钮绑定触发多图上传和上传附件对话框事件
        document.getElementById('j_upload_img_btnPic').onclick = function () {
            var dialog = uploadEditorPic.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };

        uploadEditorButtonPic1.ready(function () {
            uploadEditorButtonPic1.addListener("beforeInsertImage", _beforeInsertImageButtonPic1);
        });
        // 自定义按钮绑定触发多图上传和上传附件对话框事件
        document.getElementById('j_upload_img_btnButtonPic1').onclick = function () {
            var dialog = uploadEditorButtonPic1.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };

        uploadEditorButtonPic2.ready(function () {
            uploadEditorButtonPic2.addListener("beforeInsertImage", _beforeInsertImageButtonPic2);
        });
        // 自定义按钮绑定触发多图上传和上传附件对话框事件
        document.getElementById('j_upload_img_btnButtonPic2').onclick = function () {
            var dialog = uploadEditorButtonPic2.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };
    });
    // 多图上传动作
    function _beforeInsertImage(t, result) {
        var imageHtml = '';
        var ids = [];
        for (var i in result) {
            ids.push(result[i].src);
            imageHtml += '<li style="float: left;"><img  src="' + result[i].src + '" alt="' + result[i].alt + '" height="150" onclick="previewImg(this)"></li>';
        }
        $("#F_ImageUrl").val(ids.join(','));
        document.getElementById('upload_img_wrap').innerHTML = imageHtml;
    }

    function _beforeInsertImagePic(t, result) {
        var imageHtml = '';
        var ids = [];
        for (var i in result) {
            ids.push(result[i].src);
            imageHtml += '<li style="float: left;"><img  src="' + result[i].src + '" alt="' + result[i].alt + '" height="150" onclick="previewImg(this)"></li>';
        }
        $("#F_PicUrl").val(ids.join(','));
        document.getElementById('upload_img_wrapPic').innerHTML = imageHtml;
    }
    function _beforeInsertImageButtonPic1(t, result) {
        var imageHtml = '';
        var ids = [];
        for (var i in result) {
            ids.push(result[i].src);
            imageHtml += '<li style="float: left;"><img  src="' + result[i].src + '" alt="' + result[i].alt + '" height="150" onclick="previewImg(this)"></li>';
        }
        $("#F_ButtonPic1").val(ids.join(','));
        document.getElementById('j_upload_img_btnButtonPic1').innerHTML = imageHtml;
    }
    function _beforeInsertImageButtonPic2(t, result) {
        var imageHtml = '';
        var ids = [];
        for (var i in result) {
            ids.push(result[i].src);
            imageHtml += '<li style="float: left;"><img  src="' + result[i].src + '" alt="' + result[i].alt + '" height="150" onclick="previewImg(this)"></li>';
        }
        $("#F_ButtonPic2").val(ids.join(','));
        document.getElementById('j_upload_img_btnButtonPic2').innerHTML = imageHtml;
    }
    function previewImg(obj) {
        var imgHtml = "<img src='" + obj.src + "' />";
        //弹出层
        layer.open({
            type: 1,
            shade: 0.8,
            offset: 'auto',
            area: ['750px', '600px'],
            shadeClose: true,//点击外围关闭弹窗
            scrollbar: false,//不现实滚动条
            title: "图片预览", //不显示标题
            content: imgHtml, //捕获的元素，注意：最好该指定的元素要存放在body最外层，否则可能被其它的相对元素所影响
            cancel: function () {
                //layer.msg('捕获就是从页面已经存在的元素上，包裹layer的结构', { time: 5000, icon: 6 });
            }
        });
    }
</script>


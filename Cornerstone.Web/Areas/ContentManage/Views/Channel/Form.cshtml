<script>
    $(function () {
        // 监听多图上传和上传附件组件的插入动作
        uploadEditor.ready(function () {
            uploadEditor.addListener("beforeInsertImage", _beforeInsertImage);
        });

        uploadEditor1.ready(function () {
            uploadEditor1.addListener("afterUpVideo", _afterUpVideo);
        });

        uploadEditorBg.ready(function () {
            uploadEditorBg.addListener("beforeInsertImage", _beforeInsertImagebg);
        });

        uploadEditorFont.ready(function () {
            uploadEditorFont.addListener("beforeInsertImage", _beforeInsertImageFont);
        });
        // 自定义按钮绑定触发多图上传和上传附件对话框事件
        document.getElementById('j_upload_img_btn2').onclick = function () {
            var dialog = uploadEditor.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };

        document.getElementById('j_upload_img_btn1').onclick = function () {
            var dialog = uploadEditor1.getDialog("insertvideo");
            dialog.title = '视频上传';
            dialog.render();
            dialog.open();
        };

        document.getElementById('j_upload_img_btnbg').onclick = function () {
            var dialog = uploadEditorBg.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };

        document.getElementById('j_upload_img_btnFont').onclick = function () {
            var dialog = uploadEditorFont.getDialog("insertimage");
            dialog.title = '图片上传';
            dialog.render();
            dialog.open();
        };
    });
    // 多图上传动作

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    layui.use(['jquery', 'form', 'laydate', 'common','optimizeSelectOption'], function () {
        var form = layui.form,
            $ = layui.$,
            common = layui.common,
            laydate = layui.laydate;
        var keyValue = $.request("keyValue");
        var event = $.request("event");
        //权限字段
        common.authorizeFields('adminform');
        //此处需修改
        //类型为时间时
        //laydate.render({
            //elem: '#F_Birthday'
            //, btns: ['clear', 'now']
            //, trigger: 'click',
            //format: 'yyyy-MM-dd',
        //});

        $(function () {
            initControl();
            if (event == "edit") {
                var newsdata = JSON.parse('@Html.Raw(ViewBag.Content)');
                common.val('adminform', newsdata);
            }

           form.render();
       });
       wcLoading.close();

        function initControl() {
             $("#F_ParentId").bindSelect({
                 url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/InfoManage/Contactinfo/GetTreeSelectJson",
            });

            $("#F_ChannelId").bindSelect({
               url: "@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Channel/GetTreeSelectJson"
           });
       }
       //监听提交
       form.on('submit(saveBtn)', function (data) {
           // 单击之后提交按钮不可选,防止重复提交
           $('.site-demo-active').addClass('layui-btn-disabled');
           $('.site-demo-active').attr('disabled', 'disabled');
           var postData = data.field;

           if (!postData["F_EnabledMark"]) postData["F_EnabledMark"] = false;
           common.submitForm({
               url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/InfoManage/Contactinfo/SubmitForm?keyValue=' + keyValue,
               param: postData,
               close: false,
               success: function (result) {

                   var currentUrl = window.location.href;
                   var iframes = top.$(".layui-show>iframe");
                   if (currentUrl.indexOf("event=edit") >= 0) {
                      common.reloadIframe("@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/InfoManage/Contactinfo/Index", 'data-search-btn');
                      
                       iframes[0].src = currentUrl;
                   }
                   else {
                       iframes[0].src = currentUrl + "?event=edit&keyValue=" + result.keyValue;
                     
                   }
                 

               }
           })
           return false;
       });

        $("#NF-lan-en").on("click", function () {
            var iframes = top.$(".layui-show>iframe");
            $.get({
                data: {"lan":"1"},
                url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/SetLan',
                success: function (data) {
                    iframes[0].src = window.location.href;
                }
            })

        });

        $("#NF-lan-cn").on("click", function () {
            var iframes = top.$(".layui-show>iframe");
            $.get({
                data: {"lan":"0"},
                url: '@(Cornerstone.Code.GlobalContext.SystemConfig.VirtualDirectory)/ContentManage/Block/SetLan',
                success: function (data) {
                    iframes[0].src = window.location.href;
                }
            })

        });
   });
</script>

<body>
    <center>
        <div style=" margin: 10px;">

            <button id="NF-lan-cn" authorize="yes" class="layui-btn layui-btn-sm layui-btn-warm  " style="height:30px; padding:0 25px;" lay-submit lay-filter="lan-cn"> <i class="fa fa-flag"></i>中文版</button>
            <button id="NF-lan-en" authorize="yes" class="layui-btn layui-btn-sm  " lay-submit style="height:30px; padding:0 25px;" lay-filter="lan-en"> <i class="fa fa-flag-checkered"></i>英文版</button>
        </div>

    </center>
    <div class="layuimini-container">
        <div class="layuimini-main" style="margin-bottom: 80px;">
            <div class="layui-form layuimini-form" lay-filter="adminform">
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">上级区块</label>
                    <div class="layui-input-block">
                        <input type="hidden" id="F_LanInfoId" name="F_LanInfoId" value="">
                        <select id="F_ParentId" name="F_ParentId" lay-verify="required" lay-search>
                            <option value="0" selected>父节点</option>
                        </select>
                    </div>
                </div>


                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">栏目</label>
                    <div class="layui-input-block">
                        <select id="F_ChannelId" name="F_ChannelId" lay-filter="F_ChannelId" lay-search>
                            <option value="">请选择栏目</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">名称</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_Name" name="F_Name" autocomplete="off" lay-verify="required" placeholder="请输入" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label ">电话</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_Tel" name="F_Tel" autocomplete="off" placeholder="请输入" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label ">邮箱</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_Email" name="F_Email" autocomplete="off" placeholder="请输入" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label ">传真</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_Fax" name="F_Fax" autocomplete="off" placeholder="请输入" class="layui-input">
                    </div>
                </div>

                <div class="layui-form-item layui-hide" style="display:none;">
                    <label class="layui-form-label">前端链接</label>
                    <div class="layui-input-block">
                        <input type="text" id="F_FrontLink" name="F_FrontLink" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label">选项</label>
                    <div class="layui-input-block">
                        <input type="checkbox" name="F_EnabledMark" id="F_EnabledMark" checked="" value="true" title="有效">
                    </div>
                </div>
                <div class="layui-form-item layui-hide">
                    <label class="layui-form-label required">排序</label>
                    <div class="layui-input-block">
                        <input type="number" pattern="[0-9]*" id="F_Order" value="0" name="F_Order" lay-verify="required|number" oninput="if(value.length>8)value=value.slice(0,8)" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="form-group-bottom text-right">
                    <div class="layui-input-block">
                        <button class="layui-btn site-demo-active" lay-submit lay-filter="saveBtn">
                            &emsp;确认保存&emsp;
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



